@model  IPagedList<MvcProject.Models.RestaurantListViewModel>


<div id="restaurantList">
    <div class="pagedList" style="margin-left:auto;margin-right:auto" data-otf-target="#restaurantList">
        @Html.PagedListPager(Model,page => Url.Action("Index",new { pageNumber = page }),PagedListRenderOptions.ClassicPlusFirstAndLast)
    </div>
    @foreach (var item in Model)
    {
        <div>
            <h4>@item.Name</h4>
            <div>
                @item.City @item.Country
            </div>
            <div>
                Reviews @item.CountOfReviews
            </div>
        </div>
    }
</div>
